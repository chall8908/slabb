<section class='post<%= post.deleted? ? ' deleted' : ''%>'>
  <div class='post--info'>
    <div class='post--info-creator'>
      <%= display_user post %>
      <% if post.edited? %>
        <span class='badge' title='Last edited <%= post.updated_at %>'>
          <i class='fa fa-edit'></i>
          <%= time_ago_in_words(post.updated_at) %> ago
        </span>
      <% end %>

      <% if post.deleted? %>
        <span class='badge' title='Deleted <%= post.deleted_at %>'>
          <i class='fa fa-trash'></i>
          <%= time_ago_in_words(post.deleted_at) %> ago
        </span>
      <% end %>
    </div>
  </div>

  <div class='post--body'>
    <%= markdownify post.body %>
  </div>
</section>

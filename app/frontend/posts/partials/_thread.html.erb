<section class='post<%= post.deleted? ? ' deleted' : ''%>'>
  <div class='post--info'>
    <div class='post--info-creator'>
      <%= display_user post %>
    </div>
  </div>

  <div class='post--body'>
    <% if post.deleted? %>
      Deleted <%= post.deleted_at %>
    <% end %>
    <%= markdownify post.body %>
  </div>
</section>

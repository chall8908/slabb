<h2 class='header'>
  <%= @post.title %>

  <small class='header--right'>
    <%= link_to 'New Post', new_post_path, class: 'header--button' %>
  </small>
</h2>

<% page_info = page_entries_info @thread %>
<% pagination = will_paginate @thread %>

<nav class='pagination'>
  <span class='pagination--info'><%= page_info %></span>
  <span class='pagination--pages'><%= pagination %></span>
</nav>

<div class='thread'>
  <% @thread.each do |post| %>
    <%= render 'thread', post: post %>
  <% end %>
</div>

<nav class='pagination'>
  <span class='pagination--info'><%= page_info %></span>
  <span class='pagination--pages'><%= pagination %></span>
</nav>
